<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.account.book">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".fragment.ActivityChartFragment"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTask"/>

        <activity android:name=".fragment.ActivityListFragment"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTask"/>

        <activity android:name=".fragment.ActivitySetFragment"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTask"/>

        <activity android:name=".fragment.ActivityDebitFragment"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTask"/>

        <activity android:name=".dialog.Add_Title_Dialog"
            android:theme="@style/Theme.CustomDialog"/>

        <activity android:name=".dialog.Add_Content_Dialog"
            android:theme="@style/Theme.CustomDialog"/>

        <activity android:name=".dialog.Modify_Account_Dialog"
            android:theme="@style/Theme.CustomDialog"/>

        <activity android:name=".dialog.Set_DeleteData_Dialog"
            android:theme="@style/Theme.CustomDialog"/>

        <activity android:name=".dialog.Modify_Title_Dialog"
            android:theme="@style/Theme.CustomDialog"/>

        <activity android:name=".dialog.Category_Delete_Dialog"
            android:theme="@style/Theme.CustomDialog"/>

        <activity android:name=".dialog.Modify_Content_Dialog"
            android:theme="@style/Theme.CustomDialog"/>

        <activity android:name=".dialog.Modify_Title_YesNo_Dialog"
            android:theme="@style/Theme.CustomDialog"/>

        <activity android:name=".dialog.Payment_List_Dialog"
            android:theme="@style/Theme.CustomDialog"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8631957304793435~9704285427"/>

    </application>
</manifest>