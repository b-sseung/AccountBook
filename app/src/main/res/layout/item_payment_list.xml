<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payment_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/payment_list_month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="00"
        android:textSize="12dp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="/"
        android:textSize="12dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/payment_list_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="00"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/payment_list_titlename_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"
        android:text="결제카드"
        android:textSize="12dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/payment_list_content_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"
        android:text="결제내역"
        android:textSize="12dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/payment_list_content2_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"
        android:text="상세내역"
        android:textSize="12dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/payment_list_money_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"
        android:gravity="right"
        android:text="0"
        android:textSize="12dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textSize="12dp"
        android:textColor="#000000"/>

</LinearLayout>